<%-include("../shared/header")%>

<div class="col page">
  <h3 class="heading">Update Post</h3>
  <div class="row container">
    <form action="/Blog" method="GET">
      <input class="green" type="submit" value="Back to Message Board" />
    </form>
  </div>
  <br />
  <div class="row justify-center">
    <div class="col content align-center">
      <form action="/Blog/Edit/<%=blog.postId%>" method="POST">
        <br />
        <div class="row justify-center align-center">
          <label for="title">Post Title:&nbsp;</label>
          <input type="text" name="title" id="title" value="<%= blog.title%>" />
        </div>
        <br />
        <p class="danger">**Image uploading to come**</p>
