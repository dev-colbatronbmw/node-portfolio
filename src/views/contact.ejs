<%-include("shared/header")%>

<div class="col page">
  <h3 class="heading">Contact</h3>
  <div class="row justify-center">
    <div class="content ">
    
      <form action="/Contact/Send" method="POST">
        <div class="my-form">
      <div class="my-form-row">
        <div class="my-form-col-1">
              <label for="firstName" class="">First Name:&nbsp;</label>
            </div>
            <div class="my-form-col-3">
              <input
             
                class=""
                type="text"
                name="firstName"
                id="firstName"
                required
                oninvalid="this.setCustomValidity('How shall I address you?')"
              />
            </div>
          </div>
          <div class="my-form-row">
            <div class="my-form-col-1">
              <label for="lastName">Last Name:&nbsp;</label>
            </div>
            <div class="my-form-col-3">
              <input type="text" name="lastName" id="lastName" required
              oninvalid="this.setCustomValidity('How shall I address you?')"/>
            </div>
          </div>

          <div class="my-form-row">
            <div class="my-form-col-1">
              <label for="company">Company:&nbsp;</label>
            </div>
            <div class="my-form-col-3">
              <input type="text" name="company" id="company"  />
            </div>
          </div>

          <div class="my-form-row">
            <div class="my-form-col-1">
              <label for="zip">Zip:&nbsp;</label>
            </div>
            <div class="my-form-col-3">
              <input type="number" name="zip" id="zip"  />
            </div>
          </div>
          <div class="my-form-row">
            <div class="my-form-col-1">
              <label for="phone">Phone:&nbsp;</label>
            </div>
            <div class="my-form-col-3">
              <input type="phone" name="phone" id="phone" />
            </div>
          </div>
          <div class="my-form-row">
            <div class="my-form-col-1">
              <label for="email">Email:&nbsp;</label>
            </div>
            <div class="my-form-col-3">
              <input type="email" name="email" id="email" required oninvalid="this.setCustomValidity('I need to be able to email to you') "/>
             
   </div>  
  
  </div> 
  <div class="my-form-row">
    <div class="my-form-col-1">
      <label for="email">Best way to Contact you:&nbsp;</label>
    </div>
    <div class="my-form-col-3">
      <select name="TypeOfContact" id="TypeOfContact">
        <option value="Email">Please Email Me</option>
        <option value="Text">Shoot Me a Text</option>
          <option value="Call">Just Call Me</option>
      </select>
     
</div>  

</div> 
  <div class="my-form-row">
    <div class="my-form-col-1">
      <label for="email">Questions/Comments:&nbsp;</label>
    </div>
    <div class="my-form-col-3 comment">
      <textarea name="comment" id="comment" value="" ></textarea>
     
</div>  

</div> 
  <input class="green" type="submit"> 
</div>  


<input type="hidden" name="_csrf" value="<%=csrfToken%>">
   </form>
  </div> 
  </div>
  </div>
</div>
<%-include("shared/footer")%>
